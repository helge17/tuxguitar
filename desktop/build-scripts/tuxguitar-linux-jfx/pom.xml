									<groupId>org.openjfx</groupId>
									<artifactId>javafx-base</artifactId>
									<destFileName>javafx-base.jar</destFileName>
									<outputDirectory>${project.build.directory}/${project.finalName}/lib</outputDirectory>
									<classifier>${javafx.platform}</classifier>
									<version>${javafx.version}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.openjfx</groupId>
									<artifactId>javafx-controls</artifactId>
									<destFileName>javafx-controls.jar</destFileName>
									<outputDirectory>${project.build.directory}/${project.finalName}/lib</outputDirectory>
									<classifier>${javafx.platform}</classifier>
									<version>${javafx.version}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.openjfx</groupId>
									<artifactId>javafx-graphics</artifactId>
									<destFileName>javafx-graphics.jar</destFileName>
									<outputDirectory>${project.build.directory}/${project.finalName}/lib</outputDirectory>
									<classifier>${javafx.platform}</classifier>
