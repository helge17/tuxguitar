				<include name="TuxGuitar-CoreAudio/**"/>
				<include name="TuxGuitar-editor-utils/**"/>
				<include name="TuxGuitar-fluidsynth/**"/>
				<include name="TuxGuitar-gervill/**"/>
				<include name="TuxGuitar-gm-settings/**"/>
