		</copy>
		
		<replace dir="${target.dir}/${package.name}" token="${source.version}" value="${dist.version}" >
			<include name="**/*.xml"/>
			<include name="**/GNUmakefile"/>
		</replace>
		
		<echo>+------------------------------------------------------------------------------+</echo>
		<echo>${package.name} was created. Now you can use that package to build binary files.</echo>
		<echo>+-------------------------------------------------------------------------------+</echo>
