			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<id>copy</id>
						<phase>package</phase>
						<configuration>
							<target name="copy-files">
								<copy todir="${project.build.directory}/${project.finalName}" overwrite="true">
									<fileset file="./src/resources/tuxguitar.jnlp"/>
								</copy>
								<copy todir="${project.build.directory}/${project.finalName}/lib" overwrite="true">
									<fileset dir="../common-resources/common/lib">
										<include name="**/*.jar"/>
									</fileset>
								</copy>
								
								<copy todir="${project.build.directory}/tmp/dist/windows-x86">
									<fileset dir="${project.rootPath}/TuxGuitar/dist/" />
								</copy>
								<copy todir="${project.build.directory}/tmp/dist/gnu-linux-x86">
									<fileset dir="${project.rootPath}/TuxGuitar/dist/" />
								</copy>
								<copy todir="${project.build.directory}/tmp/dist/gnu-linux-x86-64">
									<fileset dir="${project.rootPath}/TuxGuitar/dist/" />
								</copy>
								<copy todir="${project.build.directory}/tmp/dist/macosx-x86">
									<fileset dir="${project.rootPath}/TuxGuitar/dist/" />
								</copy>
								<copy todir="${project.build.directory}/tmp/dist/macosx-x86-64">
									<fileset dir="${project.rootPath}/TuxGuitar/dist/" />
								</copy>
								<copy todir="${project.build.directory}/tmp/dist/" overwrite="true">
									<fileset dir="./src/resources/dist/"/>
								</copy>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
					
					<execution>
						<id>replace</id>
						<phase>package</phase>
						<configuration>
							<target name="replace-vars">
								<replace token= "@codebase@" value="${project.codebase}" dir="${project.build.directory}/${project.finalName}">                                 
								  <include name="tuxguitar.jnlp"/>
								</replace>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
					
					<execution>
						<id>manifest</id>
						<phase>package</phase>
						<configuration>
							<target name="update-manifest">
								<jar update="true" file="${project.build.directory}/${project.finalName}/lib/tuxguitar.jar">
									<manifest>
										<attribute name="Application-Name" value="TuxGuitar"/>
										<attribute name="Codebase" value="${project.codebase}"/>
										<attribute name="Permissions" value="all-permissions"/>
									</manifest>
								</jar>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

