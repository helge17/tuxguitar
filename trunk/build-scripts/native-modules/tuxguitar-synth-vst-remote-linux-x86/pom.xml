<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<parent>
		<artifactId>tuxguitar-pom</artifactId>
		<groupId>org.herac.tuxguitar</groupId>
		<version>SNAPSHOT</version>
		<relativePath>../../../</relativePath>
	</parent>
	
	<modelVersion>4.0.0</modelVersion>
	<artifactId>tuxguitar-synth-vst-linux-x86</artifactId>
	<packaging>pom</packaging>
	<name>${project.artifactId}</name>
	
	<properties>
		<tuxguitar.jni.cxx>g++</tuxguitar.jni.cxx>
		<tuxguitar.jni.rm>rm -f</tuxguitar.jni.rm>
		<tuxguitar.jni.ldpath>-L/usr/lib</tuxguitar.jni.ldpath>
		<tuxguitar.jni.header.path>-I${basedir}/../common-include</tuxguitar.jni.header.path>
		
		<tuxguitar-synth-vst.client.vst.sdk>${basedir}/include</tuxguitar-synth-vst.client.vst.sdk>
		
		<tuxguitar-synth-vst.client.so.path>${parent.relativePath}/TuxGuitar-synth-vst/src-client/</tuxguitar-synth-vst.client.so.path>
		<tuxguitar-synth-vst.client.so.cxx>${tuxguitar.jni.cxx}</tuxguitar-synth-vst.client.so.cxx>
		<tuxguitar-synth-vst.client.so.rm>${tuxguitar.jni.rm}</tuxguitar-synth-vst.client.so.rm>
		<tuxguitar-synth-vst.client.so.cflags>-I${tuxguitar-synth-vst.client.vst.sdk} -m32 -fPIC -fpermissive</tuxguitar-synth-vst.client.so.cflags>
		<tuxguitar-synth-vst.client.so.ldflags>-m32 -fPIC</tuxguitar-synth-vst.client.so.ldflags>
		<tuxguitar-synth-vst.client.so.ldlibs>-ldl -lX11 -lrt -lpthread</tuxguitar-synth-vst.client.so.ldlibs>
		<tuxguitar-synth-vst.client.so.ldpath>${tuxguitar.jni.ldpath}</tuxguitar-synth-vst.client.so.ldpath>
		<tuxguitar-synth-vst.client.so.binary.name>tuxguitar-synth-vst</tuxguitar-synth-vst.client.so.binary.name>
		<tuxguitar-synth-vst.client.so.binary.suffix>.bin</tuxguitar-synth-vst.client.so.binary.suffix>
		<tuxguitar-synth-vst.client.so.binary.os>_GNULinux</tuxguitar-synth-vst.client.so.binary.os>
		
		<tuxguitar-synth-vst.client.dll.path>${parent.relativePath}/TuxGuitar-synth-vst/src-client/</tuxguitar-synth-vst.client.dll.path>
		<tuxguitar-synth-vst.client.dll.cxx>/usr/bin/i686-w64-mingw32-g++-win32</tuxguitar-synth-vst.client.dll.cxx>
		<tuxguitar-synth-vst.client.dll.rm>${tuxguitar.jni.rm}</tuxguitar-synth-vst.client.dll.rm>
		<tuxguitar-synth-vst.client.dll.cflags>-I${tuxguitar-synth-vst.client.vst.sdk} -m32 -fPIC -fpermissive</tuxguitar-synth-vst.client.dll.cflags>
		<tuxguitar-synth-vst.client.dll.ldflags>-m32 -fPIC</tuxguitar-synth-vst.client.dll.ldflags>
		<tuxguitar-synth-vst.client.dll.ldlibs>-static-libgcc -static-libstdc++ -static -lws2_32 -lpthread</tuxguitar-synth-vst.client.dll.ldlibs>
		<tuxguitar-synth-vst.client.dll.ldpath>${tuxguitar.jni.ldpath}</tuxguitar-synth-vst.client.dll.ldpath>
		<tuxguitar-synth-vst.client.dll.binary.name>tuxguitar-synth-vst</tuxguitar-synth-vst.client.dll.binary.name>
		<tuxguitar-synth-vst.client.dll.binary.suffix>.exe</tuxguitar-synth-vst.client.dll.binary.suffix>
		<tuxguitar-synth-vst.client.dll.binary.os>_Win32</tuxguitar-synth-vst.client.dll.binary.os>
	</properties>
	
	<modules>
		<module>${parent.relativePath}/TuxGuitar-synth-vst</module>
	</modules>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<id>compile-native</id>
						<phase>compile</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target name="compile-native">
								<!-- Build gnulinux client -->
								<exec dir="${tuxguitar-synth-vst.client.so.path}" executable="make" failonerror="true" >
									<arg value="clean"/>
									<env key="RM" value="${tuxguitar-synth-vst.client.so.rm}" />
									<env key="BINARY_NAME" value="${tuxguitar-synth-vst.client.so.binary.name}" />
									<env key="BINARY_SUFFIX" value="${tuxguitar-synth-vst.client.so.binary.suffix}" />
									<env key="BINARY_OS" value="${tuxguitar-synth-vst.client.so.binary.os}" />
								</exec>
								<exec dir="${tuxguitar-synth-vst.client.so.path}" executable="make" failonerror="true" >
									<env key="CXX" value="${tuxguitar-synth-vst.client.so.cxx}" />
									<env key="CFLAGS" value="${tuxguitar-synth-vst.client.so.cflags}" />
									<env key="LDFLAGS" value="${tuxguitar-synth-vst.client.so.ldflags}" />
									<env key="LDLIBS" value="${tuxguitar-synth-vst.client.so.ldlibs}" />
									<env key="LDPATH" value="${tuxguitar-synth-vst.client.so.ldpath}" />
									<env key="BINARY_NAME" value="${tuxguitar-synth-vst.client.so.binary.name}" />
									<env key="BINARY_SUFFIX" value="${tuxguitar-synth-vst.client.so.binary.suffix}" />
									<env key="BINARY_OS" value="${tuxguitar-synth-vst.client.so.binary.os}" />
								</exec>
								
								<!-- Build windows client -->
								<exec dir="${tuxguitar-synth-vst.client.dll.path}" executable="make" failonerror="true" >
									<arg value="clean"/>
									<env key="RM" value="${tuxguitar-synth-vst.client.dll.rm}" />
									<env key="BINARY_NAME" value="${tuxguitar-synth-vst.client.dll.binary.name}" />
									<env key="BINARY_SUFFIX" value="${tuxguitar-synth-vst.client.dll.binary.suffix}" />
									<env key="BINARY_OS" value="${tuxguitar-synth-vst.client.dll.binary.os}" />
								</exec>
								<exec dir="${tuxguitar-synth-vst.client.dll.path}" executable="make" failonerror="true" >
									<env key="CXX" value="${tuxguitar-synth-vst.client.dll.cxx}" />
									<env key="CFLAGS" value="${tuxguitar-synth-vst.client.dll.cflags}" />
									<env key="LDFLAGS" value="${tuxguitar-synth-vst.client.dll.ldflags}" />
									<env key="LDLIBS" value="${tuxguitar-synth-vst.client.dll.ldlibs}" />
									<env key="LDPATH" value="${tuxguitar-synth-vst.client.dll.ldpath}" />
									<env key="BINARY_NAME" value="${tuxguitar-synth-vst.client.dll.binary.name}" />
									<env key="BINARY_SUFFIX" value="${tuxguitar-synth-vst.client.dll.binary.suffix}" />
									<env key="BINARY_OS" value="${tuxguitar-synth-vst.client.dll.binary.os}" />
								</exec>
							</target>
						</configuration>
					</execution>
					
					<execution>
						<id>clean-native</id>
						<phase>clean</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target name="clean-native">
								<exec dir="${tuxguitar-synth-vst.client.so.path}" executable="make" failonerror="true" >
									<arg value="clean"/>
									<env key="RM" value="${tuxguitar-synth-vst.client.so.rm}" />
									<env key="BINARY_NAME" value="${tuxguitar-synth-vst.client.so.binary.name}" />
									<env key="BINARY_SUFFIX" value="${tuxguitar-synth-vst.client.so.binary.suffix}" />
									<env key="BINARY_OS" value="${tuxguitar-synth-vst.client.so.binary.os}" />
								</exec>
								
								<exec dir="${tuxguitar-synth-vst.client.dll.path}" executable="make" failonerror="true" >
									<arg value="clean"/>
									<env key="RM" value="${tuxguitar-synth-vst.client.dll.rm}" />
									<env key="BINARY_NAME" value="${tuxguitar-synth-vst.client.dll.binary.name}" />
									<env key="BINARY_SUFFIX" value="${tuxguitar-synth-vst.client.dll.binary.suffix}" />
									<env key="BINARY_OS" value="${tuxguitar-synth-vst.client.dll.binary.os}" />
								</exec>
							</target>
						</configuration>
					</execution>
					
					<execution>
						<id>native-module-copy</id>
						<phase>package</phase>
						<configuration>
							<target name="copy-files">
								<mkdir dir="${project.build.directory}/build" />
								<mkdir dir="${project.build.directory}/build/vst-client" />
								
								<copy todir="${project.build.directory}/build/vst-client">
									<fileset file="${tuxguitar-synth-vst.client.so.path}/${tuxguitar-synth-vst.client.so.binary.name}${tuxguitar-synth-vst.client.so.binary.suffix}" />
									<fileset file="${tuxguitar-synth-vst.client.dll.path}/${tuxguitar-synth-vst.client.dll.binary.name}${tuxguitar-synth-vst.client.dll.binary.suffix}" />
								</copy>
								
								<chmod file="${project.build.directory}/build/vst-client/${tuxguitar-synth-vst.client.so.binary.name}${tuxguitar-synth-vst.client.so.binary.suffix}" perm="775" />
								<chmod file="${project.build.directory}/build/vst-client/${tuxguitar-synth-vst.client.dll.binary.name}${tuxguitar-synth-vst.client.dll.binary.suffix}" perm="775" />
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.4</version>
				<executions>
					<execution>
						<id>native-module-copy-libs</id>
						<phase>package</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>${project.groupId}</groupId>
									<artifactId>tuxguitar-synth-vst</artifactId>
									<destFileName>tuxguitar-synth-vst.jar</destFileName>
									<outputDirectory>${project.build.directory}/build/share/plugins</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
