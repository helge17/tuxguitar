<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<parent>
		<artifactId>tuxguitar-pom</artifactId>
		<groupId>org.herac.tuxguitar</groupId>
		<version>SNAPSHOT</version>
		<relativePath>../../</relativePath>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<artifactId>tuxguitar-windows-x86-installer</artifactId>
	<packaging>pom</packaging>
	<name>${project.artifactId}</name>

	<properties>
		<project.builder.executable>builder</project.builder.executable>
		<project.rootPath>${project.parent.relativePath}</project.rootPath>
		<project.bundleSourceName>tuxguitar-${project.version}-windows-x86</project.bundleSourceName>
		<org.eclipse.swt.artifactId>org.eclipse.swt.win32.win32.x86</org.eclipse.swt.artifactId>
	</properties>
	
	<modules>
		<module>../tuxguitar-windows-x86</module>
	</modules>
	
	<build>
		<plugins>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<id>copy</id>
						<phase>package</phase>
						<configuration>
							<target name="copy-files">
								<mkdir dir="${project.build.directory}/" />
								<mkdir dir="${project.build.directory}/bundle" />
								
								<copy todir="${project.build.directory}/bundle" overwrite="true">
									<fileset dir="../tuxguitar-windows-x86/target/${project.bundleSourceName}" />
								</copy>
								
								<copy todir="${project.build.directory}/bundle" overwrite="true">
									<fileset dir="./src/resources"/>
								</copy>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
					
					<execution>
						<id>package-installer</id>
						<phase>package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target name="package-installer">
								<exec dir="${project.basedir}" executable="${project.builder.executable}" failonerror="true" >
									<arg value="build"/>
									<arg value="src/installbuilder/project.xml"/>
									<arg value="windows"/>
								</exec>
							</target>
						</configuration>
					</execution>
					
					<execution>
						<id>remove-bundle</id>
						<phase>package</phase>
						<configuration>
							<target name="remove-bundle">
								<delete quiet="true" dir="${project.build.directory}/bundle" />
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
