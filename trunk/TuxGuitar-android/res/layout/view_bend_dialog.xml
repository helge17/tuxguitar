<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent" 
	android:layout_height="match_parent">

	<android.support.v7.widget.GridLayout
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		app:columnCount="2" 
		style="@style/Dialog">

		<TextView 
			android:id="@+id/bend_dlg_preset_label"
			android:text="@string/bend_dlg_preset_label" 
			app:layout_gravity="fill_horizontal|center_vertical"
			style="@style/TextViewLabel" />
		
		<Spinner 
			android:id="@+id/bend_dlg_preset_value"
			app:layout_gravity="fill_horizontal|center_vertical" />
		
		<android.support.v7.widget.Space
			app:layout_gravity="fill"
			app:layout_columnSpan="2"
			style="@style/DialogSectionSpacer" />
			
		<org.herac.tuxguitar.android.view.dialog.bend.TGBendEditor
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/bend_dlg_bend_editor" 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" 
			app:layout_columnSpan="2" />

	</android.support.v7.widget.GridLayout>

</ScrollView>