<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Application theme. -->
	<style name="TGTheme" parent="AppBaseTheme">
		<!-- ========================================================= -->
		<!-- ==== COLOR ============================================== -->
		<!-- ========================================================= -->
		<item name="darkestColor">@color/darkestColor</item>
		<item name="darkColor">@color/darkColor</item>
		<item name="mediumColor">@color/mediumColor</item>
		<item name="lightColor">@color/lightColor</item>
		<item name="lightestColor">@color/lightestColor</item>
		
		<!-- ========================================================= -->
		<!-- ==== COLOR SELECTOR ===================================== -->
		<!-- ========================================================= -->
		<item name="textLightColorSelector">@color/color_text_light</item>

		<!-- ========================================================= -->
		<!-- ==== CUSTOM STYLES ====================================== -->
		<!-- ========================================================= -->
		<item name="dialogStyle">@style/dialogStyle</item>
		<item name="dialogVerticalSpacerStyle">@style/dialogVerticalSpacerStyle</item>
		<item name="dialogImageButtonStyle">@style/dialogImageButtonStyle</item>
		<item name="dialogImageButtonSettingsStyle">@style/TGImageButton.Settings</item>
		
		<item name="mainImageButtonStyle">@style/mainImageButtonStyle</item>
		<item name="mainImageButtonPlayStyle">@style/TGImageButton.Play</item>
		<item name="mainImageButtonStopStyle">@style/TGImageButton.Stop</item>

		<item name="mainFloatingButtonAddStyle">@style/TGFloatingButton.Add</item>

		<item name="tabKeyBoardStyle">@style/tabKeyBoardStyle</item>
		<item name="tabKeyBoardImageButtonKey0Style">@style/TGKeyBoardButton.Key0</item>
		<item name="tabKeyBoardImageButtonKey1Style">@style/TGKeyBoardButton.Key1</item>
		<item name="tabKeyBoardImageButtonKey2Style">@style/TGKeyBoardButton.Key2</item>
		<item name="tabKeyBoardImageButtonKey3Style">@style/TGKeyBoardButton.Key3</item>
		<item name="tabKeyBoardImageButtonKey4Style">@style/TGKeyBoardButton.Key4</item>
		<item name="tabKeyBoardImageButtonKey5Style">@style/TGKeyBoardButton.Key5</item>
		<item name="tabKeyBoardImageButtonKey6Style">@style/TGKeyBoardButton.Key6</item>
		<item name="tabKeyBoardImageButtonKey7Style">@style/TGKeyBoardButton.Key7</item>
		<item name="tabKeyBoardImageButtonKey8Style">@style/TGKeyBoardButton.Key8</item>
		<item name="tabKeyBoardImageButtonKey9Style">@style/TGKeyBoardButton.Key9</item>
		<item name="tabKeyBoardImageButtonInsertStyle">@style/TGKeyBoardButton.Insert</item>
		<item name="tabKeyBoardImageButtonDeleteStyle">@style/TGKeyBoardButton.Delete</item>
		<item name="tabKeyBoardImageButtonDurationStyle">@style/TGKeyBoardButton.Duration</item>
		<item name="tabKeyBoardImageButtonDurationIncrementStyle">@style/TGKeyBoardButton.DurationIncrement</item>
		<item name="tabKeyBoardImageButtonDurationDecrementStyle">@style/TGKeyBoardButton.DurationDecrement</item>
		<item name="tabKeyBoardImageButtonRightStyle">@style/TGKeyBoardButton.Right</item>
		<item name="tabKeyBoardImageButtonLeftStyle">@style/TGKeyBoardButton.Left</item>
		<item name="tabKeyBoardImageButtonUpStyle">@style/TGKeyBoardButton.Up</item>
		<item name="tabKeyBoardImageButtonDownStyle">@style/TGKeyBoardButton.Down</item>
		
		<item name="mainDrawerListItemStyle">@style/mainDrawerListItemStyle</item>
		<item name="mainDrawerImageButtonMixerStyle">@style/TGImageButton.Mixer</item>
		<item name="mainDrawerImageButtonInfoStyle">@style/TGImageButton.Info</item>
		<item name="mainDrawerFloatingButtonAddTrackStyle">?attr/mainFloatingButtonAddStyle</item>
		<item name="mainDrawerToolbarStyle">@style/mainDrawerToolbarStyle</item>
		<item name="mainDrawerTransportPanelStyle">@style/mainDrawerTransportPanelStyle</item>

		<item name="browserSaveImageButtonStyle">@style/TGImageButton.Save</item>

		<item name="browserElementIconStyle">@style/browserElementIconStyle</item>
		<item name="browserElementIconFileStyle">@style/browserElementIconFileStyle</item>
		<item name="browserElementIconFolderStyle">@style/browserElementIconFolderStyle</item>
		<item name="browserElementNameStyle">@style/browserElementNameStyle</item>
		<item name="browserCollectionsDlgImageButtonSubmitStyle">@style/TGImageButton.Submit</item>
		<item name="browserCollectionsDlgImageButtonDeleteStyle">@style/TGImageButton.Delete</item>
		
		<item name="channelListStyle">@style/channelListStyle</item>
		<item name="channelListItemStyle">@style/channelListItemStyle</item>
		<item name="channelListItemTextViewStyle">@style/channelListItemTextViewStyle</item>
		<item name="channelListItemImageButtonStyle">@style/channelListItemImageButtonStyle</item>
		<item name="channelListItemDividerStyle">@style/channelListItemDividerStyle</item>

		<!-- ========================================================= -->
		<!-- ==== OVERRIDE WIDGET STYLES ============================= -->
		<!-- ========================================================= -->
		<item name="android:textViewStyle">@style/TGWidget.TextView</item>
		<item name="android:spinnerStyle">@style/TGWidget.Spinner</item>
    </style>

	<!-- ========================================================= -->
	<!-- ==== WIDGET STYLES ====================================== -->
	<!-- ========================================================= -->
    <style name="TGWidget" parent="android:Widget" />

	<style name="TGWidget.TextView" >
		<item name="android:typeface">normal</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">18sp</item>
	</style>

	<style name="TGWidget.Spinner" parent="AppBaseWidget.Spinner" />

	<!-- ========================================================= -->
	<!-- ==== IMAGE BUTTON ======================================= -->
	<!-- ========================================================= -->

	<style name="TGImageButton" >
		<item name="android:layout_width">36dp</item>
		<item name="android:layout_height">36dp</item>
		<item name="android:padding">6dip</item>
		<item name="android:background">?android:selectableItemBackground</item>
	</style>

	<style name="TGImageButton.Save">
		<item name="android:src">@drawable/ic_save_gray_24dp</item>
	</style>

	<style name="TGImageButton.Submit" >
		<item name="android:src">@drawable/ic_send_gray_24dp</item>
	</style>

	<style name="TGImageButton.Delete" >
		<item name="android:src">@drawable/ic_delete_gray_24dp</item>
	</style>

	<style name="TGImageButton.Mixer" >
		<item name="android:src">@drawable/ic_volume_up_white_24dp</item>
	</style>

	<style name="TGImageButton.Info" >
		<item name="android:src">@drawable/ic_info_outline_white_24dp</item>
	</style>

	<style name="TGImageButton.Settings" >
		<item name="android:src">@drawable/ic_settings_gray_24dp</item>
	</style>

	<style name="TGImageButton.Play" >
		<item name="android:src">@drawable/ic_play_circle_outline_white_24dp</item>
	</style>

	<style name="TGImageButton.Stop" >
		<item name="android:src">@drawable/ic_pause_circle_outline_white_24dp</item>
	</style>

	<!-- ========================================================= -->
	<!-- ==== FLOATING BUTTON ======================================= -->
	<!-- ========================================================= -->

	<style name="TGFloatingButton" />

	<style name="TGFloatingButton.Add">
		<item name="android:src">@drawable/ic_add_white_24dp</item>
	</style>

	<!-- ========================================================= -->
    <style name="dialogStyle" >
        <item name="android:padding">10dp</item>
	</style>
    
    <style name="dialogVerticalSpacerStyle" >
        <item name="android:layout_height">20dp</item>
	</style>
	
	<style name="dialogImageButtonStyle" >
	    <item name="android:layout_width">36dp</item>
	    <item name="android:layout_height">36dp</item>
	    <item name="android:padding">6dip</item>
	    <item name="android:background">?android:selectableItemBackground</item>
	</style>
	
	<!-- ========================================================= -->
	<!-- ==== MAIN =============================================== -->
	<!-- ========================================================= -->
	
	<style name="mainImageButtonStyle" >
	    <item name="android:layout_width">36dp</item>
	    <item name="android:layout_height">36dp</item>
	    <item name="android:padding">6dip</item>
	    <item name="android:background">?android:selectableItemBackground</item>
	</style>
	
	<!-- ========================================================= -->
	<!-- ==== TAB KEYBOARD ======================================= -->
	<!-- ========================================================= -->
	
	<style name="tabKeyBoardStyle" >
		<item name="android:background">?attr/darkColor</item>
	</style>

	<style name="TGKeyBoardButton" >
		<item name="android:typeface">normal</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">?attr/textLightColorSelector</item>

		<item name="android:layout_width">36dp</item>
		<item name="android:layout_height">36dp</item>
		<item name="android:padding">0sp</item>
	</style>

	<style name="TGKeyBoardButton.Key0" >
		<item name="android:src">@drawable/ic_keyboard_key_0_white_24dp</item>
	</style>

	<style name="TGKeyBoardButton.Key1" >
		<item name="android:src">@drawable/ic_keyboard_key_1_white_24dp</item>
	</style>

	<style name="TGKeyBoardButton.Key2" >
		<item name="android:src">@drawable/ic_keyboard_key_2_white_24dp</item>
	</style>

	<style name="TGKeyBoardButton.Key3" >
		<item name="android:src">@drawable/ic_keyboard_key_3_white_24dp</item>
	</style>

	<style name="TGKeyBoardButton.Key4" >
		<item name="android:src">@drawable/ic_keyboard_key_4_white_24dp</item>
	</style>

	<style name="TGKeyBoardButton.Key5" >
		<item name="android:src">@drawable/ic_keyboard_key_5_white_24dp</item>
	</style>

	<style name="TGKeyBoardButton.Key6" >
		<item name="android:src">@drawable/ic_keyboard_key_6_white_24dp</item>
	</style>

	<style name="TGKeyBoardButton.Key7" >
		<item name="android:src">@drawable/ic_keyboard_key_7_white_24dp</item>
	</style>

	<style name="TGKeyBoardButton.Key8" >
		<item name="android:src">@drawable/ic_keyboard_key_8_white_24dp</item>
	</style>

	<style name="TGKeyBoardButton.Key9" >
		<item name="android:src">@drawable/ic_keyboard_key_9_white_24dp</item>
	</style>

	<style name="TGKeyBoardButton.Insert" >
		<item name="android:src">@drawable/ic_keyboard_arrow_right_white_24dp</item>
	</style>
	
	<style name="TGKeyBoardButton.Delete" >
		<item name="android:src">@drawable/ic_keyboard_arrow_left_white_24dp</item>
	</style>
	
	<style name="TGKeyBoardButton.Duration" >
		<item name="android:src">@drawable/ic_music_note_white_24dp</item>
	</style>
	
	<style name="TGKeyBoardButton.DurationIncrement" >
		<item name="android:src">@drawable/ic_keyboard_arrow_up_white_24dp</item>
	</style>
	
	<style name="TGKeyBoardButton.DurationDecrement" >
		<item name="android:src">@drawable/ic_keyboard_arrow_down_white_24dp</item>
	</style>
	
	<style name="TGKeyBoardButton.Right" >
		<item name="android:src">@drawable/ic_keyboard_arrow_right_white_24dp</item>
	</style>
	
	<style name="TGKeyBoardButton.Left" >
		<item name="android:src">@drawable/ic_keyboard_arrow_left_white_24dp</item>
	</style>
	
	<style name="TGKeyBoardButton.Up" >
		<item name="android:src">@drawable/ic_keyboard_arrow_up_white_24dp</item>
	</style>
	
	<style name="TGKeyBoardButton.Down" >
		<item name="android:src">@drawable/ic_keyboard_arrow_down_white_24dp</item>
	</style>
	
	<!-- ========================================================= -->
	<!-- ==== DRAWER ============================================= -->
	<!-- ========================================================= -->
	
	<style name="mainDrawerListItemStyle" >
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">16sp</item>
		<item name="android:padding">8sp</item>
		<item name="android:textColor">?attr/textLightColorSelector</item>
	</style>

	<style name="mainDrawerToolbarStyle" >
	    <item name="android:background">?attr/mediumColor</item>
	    <item name="android:textColor">?attr/textLightColorSelector</item>
	    <item name="android:padding">0dp</item>
	</style>
	
	<style name="mainDrawerTransportPanelStyle" >
	    <item name="android:background">?attr/mediumColor</item>
	</style>
	
	<!-- ========================================================= -->
	<!-- ==== BROWSER ============================================ -->
	<!-- ========================================================= -->

	<style name="browserElementIconStyle" >
	    <item name="android:layout_width">24dp</item>
	    <item name="android:layout_height">24dp</item>
	    <item name="android:scaleType">fitCenter</item>
	</style>
	
	<style name="browserElementIconFileStyle" >
	    <item name="android:src">@drawable/browser_file</item>
	</style>
	
	<style name="browserElementIconFolderStyle" >
	    <item name="android:src">@drawable/browser_folder</item>
	</style>
	
	<style name="browserElementNameStyle" >
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">16sp</item>
		<item name="android:padding">8sp</item>
	</style>
	<!-- ========================================================= -->
	<!-- ==== CHANNEL LIST ======================================= -->
	<!-- ========================================================= -->
	
	<style name="channelListStyle" >
	    <item name="android:background">?attr/darkestColor</item>
	</style>
	
	<style name="channelListItemStyle" >
	    <item name="android:paddingTop">12dp</item>
		<item name="android:background">@drawable/background_selector_darkest</item>
	</style>
	
	<style name="channelListItemTextViewStyle" >
		<item name="android:typeface">normal</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">?attr/textLightColorSelector</item>
	</style>
	
	<style name="channelListItemImageButtonStyle" >
	    <item name="android:layout_width">42dp</item>
	    <item name="android:layout_height">42dp</item>
	    <item name="android:scaleType">fitCenter</item>
	</style>
	
	<style name="channelListItemDividerStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1dp</item>
		<item name="android:background">?attr/lightColor</item>
	</style>
</resources>
